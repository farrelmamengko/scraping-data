</div>

<!-- CSS Tambahan untuk Modal -->
<style>
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6); /* Overlay gelap transparan */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    padding: 20px;
}

.modal-content {
    background-color: #ffffff;
    padding: 30px 35px;
    border-radius: 8px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    max-width: 800px; /* Lebar maksimum modal */
    width: 90%;
    max-height: 90vh; /* Tinggi maksimum modal */
    overflow-y: auto; /* Scroll jika konten terlalu panjang */
    position: relative;
    animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

.modal-close-btn {
    position: absolute;
    top: 15px;
    right: 20px;
    background: none;
    border: none;
    font-size: 2em;
    color: #aaa;
    cursor: pointer;
    line-height: 1;
    padding: 0;
}
.modal-close-btn:hover {
    color: #333;
}

.modal-content h3 {
    color: #e71e25; /* Merah GDA */
    margin-top: 0;
    margin-bottom: 15px; /* Tambah jarak bawah */
    font-size: 1.6em;
    border-bottom: 1px solid #eeeeee; /* Border abu terang */
    padding-bottom: 15px;
}

.modal-meta {
    font-size: 0.9em;
    color: #6c757d; /* Abu-abu standar */
    margin-bottom: 25px; /* Tambah jarak bawah */
}
.modal-meta strong {
    color: #333333; /* Hitam/Gelap */
}
.modal-meta span { 
    margin-right: 10px; 
}
#modalType {
    font-weight: bold;
    color: #e71e25; /* Merah GDA */
    background-color: #fff0f0; /* Merah muda sangat terang */
    padding: 3px 8px; /* Sesuaikan padding */
    border-radius: 4px;
    display: inline-block;
    margin-right: 10px;
}

.modal-body {
    margin-bottom: 25px;
}
.modal-body strong {
    display: block;
    margin-bottom: 8px;
    color: #495057; /* Abu lebih gelap untuk label */
