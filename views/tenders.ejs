                                    data-judul="<%= tender.judul %>"
                                    data-tanggal="<%= tender.tanggal %>"
                                    data-batas-waktu="<%= tender.batasWaktu %>"
                                    data-kkks="<%= tender.kkks %>"
                                    data-bidang-usaha="<%= tender.bidangUsaha %>"
                                    data-tipe-tender="Pelelangan Umum"
                                    data-deskripsi="<%= tender.deskripsi || '' %>"
                                    data-attachment-url="<%= tender.attachmentUrl %>"
                                    data-attachment-name="<%= tender.attachmentName %>"
                                    data-golongan-usaha="<%= tender.golonganUsaha || '-' %>"
