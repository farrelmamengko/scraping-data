    color: #6c757d;
}

.modal-footer {
    text-align: right;
    padding-top: 20px;
    border-top: 1px solid #eeeeee; /* Border abu terang */
}

/* Gaya tombol sekunder untuk modal (Tombol Kembali - samakan dengan Reset) */
.btn-secondary {
    padding: 8px 18px;
    border-radius: 6px;
    font-size: 0.9em;
    font-weight: 600;
    background-color: #6c757d; /* Latar Abu */
    color: #ffffff; /* Teks Putih */
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
}
.btn-secondary:hover {
    background-color: #5a6268; /* Abu lebih gelap hover */
}

</style>

<!-- JavaScript untuk Modal -->
<script>
    const modal = document.getElementById('tenderModal');
    const modalTitle = document.getElementById('modalTitle');
    const modalType = document.getElementById('modalType');
    const modalTanggal = document.getElementById('modalTanggal');
    const modalBatas = document.getElementById('modalBatas');
    const modalKkks = document.getElementById('modalKkks');
    const modalDeskripsi = document.getElementById('modalDeskripsi');
    const modalBidang = document.getElementById('modalBidang');
    const modalAttachments = document.getElementById('modalAttachments');
    const modalGolonganUsaha = document.getElementById('modalGolonganUsaha');
    const modalJenisPengadaan = document.getElementById('modalJenisPengadaan');

    function openModal(data) {
        modalTitle.textContent = data.judul || 'Detail Tender';
        modalType.textContent = data.tipeTender || 'N/A';
        modalTanggal.textContent = data.tanggal || 'N/A';
        modalBatas.textContent = data.batasWaktu || 'N/A';
        modalKkks.textContent = data.kkks || 'N/A';
        modalDeskripsi.textContent = data.deskripsi || 'Tidak ada deskripsi.';
        modalBidang.textContent = data.bidangUsaha || '-';
        
        // Isi data baru
        modalGolonganUsaha.textContent = data.golonganUsaha || '-'; 
        modalJenisPengadaan.textContent = data.jenisPengadaan || '-';

        // Tampilkan attachments
        modalAttachments.innerHTML = '<strong>Attachments:</strong>'; // Reset konten attachment
        // Cek dari data tender yang diambil dari tombol
        const localPdfPath = data.localPdf; 
        const attachmentUrl = data.attachmentUrl;
        const attachmentName = data.attachmentName || 'Download';

        if (localPdfPath) {
            const link = document.createElement('a');
            link.href = localPdfPath;
            link.target = '_blank';
            link.innerHTML = `<i class="fas fa-paperclip"></i> ${attachmentName}`;
            modalAttachments.appendChild(link);
        } else if (attachmentUrl && attachmentUrl !== '#') {
            const link = document.createElement('a');
            link.href = attachmentUrl;
            link.target = '_blank';
            link.innerHTML = `<i class="fas fa-external-link-alt"></i> ${attachmentName} (Link Asli)`;
            modalAttachments.appendChild(link);
        } else {
            const noAttach = document.createElement('span');
            noAttach.className = 'no-attach';
            noAttach.textContent = 'Tidak ada attachment.';
            modalAttachments.appendChild(noAttach);
        }

        modal.style.display = 'flex'; // Tampilkan modal
    }

    function closeModal() {
        modal.style.display = 'none'; // Sembunyikan modal
    }

    // Event listener untuk tombol detail (delegasi)
    document.addEventListener('click', function(event) {
        if (event.target.classList.contains('btn-detail')) {
            const button = event.target;
            const tenderData = {
                id: button.dataset.id,
                judul: button.dataset.judul,
                tanggal: button.dataset.tanggal,
                batasWaktu: button.dataset.batasWaktu,
                kkks: button.dataset.kkks,
                deskripsi: button.dataset.deskripsi,
                bidangUsaha: button.dataset.bidangUsaha,
                tipeTender: button.dataset.tipeTender,
                attachmentUrl: button.dataset.attachmentUrl,
                attachmentName: button.dataset.attachmentName,
                golonganUsaha: button.dataset.golonganUsaha,
                jenisPengadaan: button.dataset.jenisPengadaan,
                localPdf: button.dataset.localPdf
            };
            openModal(tenderData);
        }
    });

    // Tutup modal jika klik di luar area konten
    modal.addEventListener('click', function(event) {
        if (event.target === modal) { // Hanya jika klik overlay, bukan kontennya
            closeModal();
        }
    });

</script>

</body>
